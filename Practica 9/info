//6666,8 bits, no paridad,1 bit de paro.


#include <avr/io.h>

void UART0_init(void);
void UART0_putchar(char data);
char UART0_getchar(void);


int main()
{
	UART0_init();
	while(1)
	{
		UART0_putchar('U');
		UART0_getchar();
	}


}



void UART0_init(void)
{
 // 
	UBRR0 = 149; // n es el numero de periferico que se debe de usar esto hace referia a los 16 bits
	UCSR0A = 0; // para asegurarnos que todo este a 0 
	UCSR0B = (1<<TXEN0)|(1<<RXEN0); 
	UCSR0C = (3<<UCSZ00);// 8 bits no paridad y reloj asincrono


}
void UART0_putchar(char data)
{
	while(!((1<<UDRE0)&(1<<UCSR0A))); // regresa 1 cuando esta vacio...mientras no esta vacio 
		UDR0 = data; //para mandar el valor por UART

}
char UART0_getchar(void)
{
		while(!((1<<RXC0)&(1<<UCSR0A))); // regresa 1 cuando esta vacio...mientras no esta vacio 
		return UDR0; //para mandar el valor por UART
}




































